{
    "manifest_version": 3,
    "name": "Tab Content Copier",
    "version": "1.0",
    "description": "Copy the content of all tabs in the current window, including the page's title, timestamp, and URL.",
    "permissions": [
        "tabs",
        "activeTab",
        "clipboardWrite",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}